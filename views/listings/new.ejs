<% layout("/layouts/boilerplate") -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-2">
        <br><br>
      <h1 class="mb-4">Create a New Listing</h1>
      <form method="POST" action="/listings" class="needs-validation" novalidate>
        
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input 
            name="listing[title]" 
            id="title"
            class="form-control" 
            placeholder="Add a catchy Title" 
            type="text" 
            required
          />
          <div class="valid-feedback">Title looks good</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea 
            name="listing[description]" 
            id="description"
            class="form-control" 
            placeholder="Enter description"
            rows="4"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <!-- Image filename -->
        <div class="mb-3">
          <label for="image-filename" class="form-label">Image Filename</label>
          <input 
            name="listing[image][filename]" 
            id="image-filename"
            class="form-control" 
            placeholder="Enter image filename" 
            type="text"
          />
        </div>

        <!-- Image URL -->
        <div class="mb-3">
          <label for="image-url" class="form-label">Image URL / Link</label>
          <input 
            name="listing[image][url]" 
            id="image-url"
            class="form-control" 
            placeholder="Enter image URL" 
            type="text"
          />
        </div>
        <div class="row">
            <!-- Price -->
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input 
                name="listing[price]" 
                id="price"
                class="form-control" 
                placeholder="1,200" 
                type="number"
                required
            />
            <div class="invalid-feedback">Please enter a valid Price</div>
            </div>

            <!-- Country -->
            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input 
                name="listing[country]" 
                id="country"
                class="form-control" 
                placeholder="India" 
                type="text"
                required
            />
            <div class="invalid-feedback">Country should be valid</div>
            </div>
          </div>
        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input 
            name="listing[location]" 
            id="location"
            class="form-control" 
            placeholder="Thanjavur" 
            type="text"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <br><br>
        <!-- Submit Button -->
        <button type="submit" class="btn btn-dark add-btn">Add Listing</button>
        <br><br>
      </form>
    </div>
  </div>
</div>
